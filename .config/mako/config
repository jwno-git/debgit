# Mako notification daemon configuration
# Replaces dunst functionality for Wayland/Sway

# APPEARANCE
font=monospace 11
background-color=#290f34aa
text-color=#ffffff
border-color=#24516B
border-size=1
border-radius=5
padding=10
margin=6

# LAYOUT
anchor=top-right
width=300
height=100
max-visible=5
layer=overlay

# BEHAVIOR
default-timeout=5000
ignore-timeout=0

# GROUP NOTIFICATIONS
group-by=app-name

# ICONS
icons=1
max-icon-size=32
icon-path=/usr/share/icons/RosePine:/usr/share/pixmaps

# ACTIONS
actions=1

# URGENCY LEVELS
[urgency=low]
background-color=#180920cc
border-color=#290f34
default-timeout=3000

[urgency=normal]
background-color=#290f34aa
border-color=#24516B
default-timeout=5000

[urgency=critical]
background-color=#ff5555aa
border-color=#ff7777
text-color=#ffffff
default-timeout=0

# APPLICATION SPECIFIC RULES
[app-name=volume]
anchor=top-center
width=200
height=60
default-timeout=2000
group-by=none

[app-name=brightness]
anchor=top-center
width=200
height=60
default-timeout=2000
group-by=none

[app-name=NetworkManager]
anchor=bottom-right
default-timeout=8000

[app-name=firefox]
max-icon-size=48

# MULTIMEDIA NOTIFICATIONS
[category=device]
default-timeout=8000

[category=network]
default-timeout=8000

# PROGRESS BAR STYLE
progress-color=over #24516B

# CLOSE NOTIFICATIONS
# Left click to dismiss
# Right click to dismiss all
# Middle click to invoke default action
